[flake8]
max-line-length = 100
max-complexity = 20
exclude =
    .git,
    __pycache__,
    build,
    dist,
    *.egg-info,
    .venv,
    venv,
    .daveagent,
    logs,
    test/site_dump
ignore =
    # Line breaks and whitespace (conflicts with black)
    W503,
    E203,
    E501,
    # Docstring warnings (too strict, add gradually)
    D100,D101,D102,D103,D104,D105,D106,D107,
    D200,D201,D202,D203,D204,D205,D206,D207,D208,D209,D210,D211,D212,D213,D214,D215,
    D300,D301,D302,
    D400,D401,D402,D403,D404,D405,D406,D407,D408,D409,D410,D411,D412,D413,D414,D415,D416,D417,
    # Unused imports/variables (will clean up gradually)
    F401,F841,
    # Bare except (sometimes necessary)
    E722,B001,
    # Complexity (already checked by pylint)
    C901,
    # Whitespace
    W291,W293,
    # F-strings without placeholders
    F541,
    # Import order
    E402,
    # Indentation
    E126,E131,
    # Mutable defaults (sometimes intended)
    B006,B007,
    # Multiple statements
    E701,
per-file-ignores =
    __init__.py:F401,F403,F405
    test_*.py:F401,F811,B001,E722
