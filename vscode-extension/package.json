{
    "name": "daveagent-vscode",
    "displayName": "DaveAgent",
    "description": "AI-powered coding assistant for VS Code",
    "version": "1.0.0",
    "publisher": "daveagent",
    "engines": {
        "vscode": "^1.80.0"
    },
    "categories": [
        "AI",
        "Assistants"
    ],
    "activationEvents": [],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "daveagent.start",
                "title": "DaveAgent: Start"
            },
            {
                "command": "daveagent.ask",
                "title": "DaveAgent: Ask"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "daveagent-view",
                    "title": "DaveAgent",
                    "icon": "media/robot.svg"
                }
            ]
        },
        "views": {
            "daveagent-view": [
                {
                    "type": "webview",
                    "id": "daveagent.sidebar",
                    "name": "Chat"
                }
            ]
        },
        "configuration": {
            "title": "DaveAgent",
            "properties": {
                "daveagent.pythonPath": {
                    "type": "string",
                    "default": "python",
                    "description": "Path to the Python interpreter to use for DaveAgent."
                },
                "daveagent.workingUpdate": {
                    "type": "boolean",
                    "default": true,
                    "description": "Whether to auto-refresh workspace context."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.80.0",
        "@types/glob": "^8.1.0",
        "@types/node": "20.2.5",
        "@typescript-eslint/eslint-plugin": "^5.59.8",
        "@typescript-eslint/parser": "^5.59.8",
        "eslint": "^8.41.0",
        "glob": "^8.1.0",
        "typescript": "^5.1.3",
        "@vscode/test-electron": "^2.3.2"
    }
}